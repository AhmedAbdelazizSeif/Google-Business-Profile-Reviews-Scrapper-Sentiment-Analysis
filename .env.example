# Environment Configuration File
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# =============================================================================
# GOOGLE BUSINESS PROFILE SETTINGS
# =============================================================================

# Your Google Business Profile Group ID
# Find this in your Google Business Profile URL:
# https://business.google.com/groups/YOUR_GROUP_ID_HERE/reviews
GOOGLE_BUSINESS_GROUP_ID=YOUR_GROUP_ID_HERE

# Alternative: Full reviews URL (if you prefer)
# GOOGLE_REVIEWS_URL=https://business.google.com/groups/YOUR_GROUP_ID/reviews

# =============================================================================
# CHROME DEBUGGING SETTINGS
# =============================================================================

# Chrome remote debugging address
CHROME_DEBUG_ADDRESS=localhost:9222

# Chrome profile directory (for isolated browsing)
CHROME_PROFILE_DIR=C:\selenium\ChromeProfile

# Chrome debugging port
CHROME_DEBUG_PORT=9222

# =============================================================================
# DATABASE CONFIGURATION (Optional - PostgreSQL)
# =============================================================================

# Database connection settings
DB_NAME=your_database_name
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=192.168.1.143
DB_PORT=5432

# Alternative: Database URL (full connection string)
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

# Number of weeks to look back when scraping
SCRAPING_WEEKS=4

# Maximum pages to scrape (safety limit)
SCRAPING_MAX_PAGES=50

# Delay between page loads (seconds)
SCRAPING_PAGE_DELAY=3

# Delay before clicking next page (seconds)
SCRAPING_NEXT_PAGE_DELAY=4

# =============================================================================
# SENTIMENT ANALYSIS CONFIGURATION
# =============================================================================

# Sentiment thresholds
SENTIMENT_POSITIVE_THRESHOLD=0.05
SENTIMENT_NEGATIVE_THRESHOLD=-0.05
SENTIMENT_STAR_WEIGHT=0.1

# =============================================================================
# OUTPUT CONFIGURATION
# =============================================================================

# Output directories
OUTPUT_REVIEWS_DIR=output/reviews
OUTPUT_REPORTS_DIR=output/reports

# File naming pattern (use {date} placeholder)
OUTPUT_FILENAME_PATTERN=sentiment_report_{date}.xlsx

# =============================================================================
# EMAIL NOTIFICATIONS (Optional - Future Feature)
# =============================================================================

# SMTP settings for email reports
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-specific-password
# SMTP_FROM=your-email@gmail.com
# SMTP_TO=recipient@example.com

# =============================================================================
# API KEYS (Optional - Future Features)
# =============================================================================

# OpenAI API Key (for advanced sentiment analysis)
# OPENAI_API_KEY=sk-your-api-key-here

# Translation API (if using external translation service)
# TRANSLATION_API_KEY=your-translation-api-key

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Encryption key for sensitive data (generate with: python -c "import secrets; print(secrets.token_hex(32))")
# ENCRYPTION_KEY=your-encryption-key-here

# Session timeout (minutes)
SESSION_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/app.log

# Enable detailed logging
DEBUG_MODE=False

# =============================================================================
# BUSINESS INFORMATION (Optional - for reports)
# =============================================================================

# Company name (appears in reports)
COMPANY_NAME=Your Company Name

# Report title prefix
REPORT_TITLE_PREFIX=Sentiment Analysis Report

# Company logo path
LOGO_PATH=assets/logo.png

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Enable/disable features
ENABLE_DATABASE=False
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_AUTO_BACKUP=True

# Backup directory
BACKUP_DIR=backups

# Data retention period (days)
DATA_RETENTION_DAYS=90
